{
  "include": [
    "nifty"
  ],
  
  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    "tests_integration/**"
  ],

  "ignore": [
    "tests_integration/**"
  ],

  "defineConstant": {
    "DEBUG": true
  },

  "strict": [
    "nifty/**"
  ],
  "stubPath": "typings",

  "reportMissingImports": true,
  "reportMissingTypeStubs": true,
  "reportUnknownParameterType": true,
  "reportUntypedFunctionDecorator": true,

  "pythonVersion": "3.11",
  "pythonPlatform": "Linux"
}
