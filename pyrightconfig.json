{
  "include": [
    "src"
  ],
  
  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    "src/experimental",
    "src/typestubs"
  ],

  "ignore": [
  ],

  "defineConstant": {
    "DEBUG": true
  },

  "strict": [
    "src/nifty_common/**"
  ],
  "stubPath": "typings",

  "reportMissingImports": true,
  "reportMissingTypeStubs": true,
  "reportUnknownParameterType": true,
  "reportUntypedFunctionDecorator": true,

  "pythonVersion": "3.10",
  "pythonPlatform": "Linux"
}
